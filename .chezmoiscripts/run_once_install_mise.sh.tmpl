#!/bin/bash
set -euo pipefail

# Install mise using Homebrew
if ! command -v mise >/dev/null; then
  echo "[+] Installing mise with Homebrew..."
  brew install mise
else
  echo "[âœ“] mise already installed at: $(command -v mise)"
fi

# Optionally symlink to ~/.local/bin (for compatibility with other scripts)
if [ ! -f "$HOME/.local/bin/mise" ]; then
  mkdir -p "$HOME/.local/bin"
  ln -sf "$(command -v mise)" "$HOME/.local/bin/mise"
  echo "[+] Symlinked mise to ~/.local/bin/mise"
fi

