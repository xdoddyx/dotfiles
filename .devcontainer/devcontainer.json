{
  "name": "Python 3",
  "image": "mcr.microsoft.com/devcontainers/python:1-3.12-bullseye",
  "features": {
    "ghcr.io/devcontainers/features/azure-cli:1": {},
    "ghcr.io/devcontainers/features/github-cli:1": {},
    "ghcr.io/flexwie/devcontainer-features/op:1": {}
  },
  "remoteEnv": {
    "MY_VARIABLE": "Mischa",
    "SSH_AUTH_SOCK": "/ssh-agent"
  },
  "mounts": [
    // mount SSH agent socket dari host
    "type=bind,source=${localEnv:SSH_AUTH_SOCK},target=/ssh-agent,consistency=cached",
    // mount direktori .ssh sehingga key config dapat dibaca di container
    "type=bind,source=${localEnv:HOME}/.ssh,target=/home/vscode/.ssh,consistency=cached"
  ]
}
