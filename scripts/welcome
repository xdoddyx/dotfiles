#!/bin/bash
# ~~~~~~~~~~~~~~~ Welcome Screen :) ~~~~~~~~~~~~~~~~~~~~~~~~
# from TJDevries's config repo
clear
light_blue='\e[1;34m'

echo -ne "${light_blue}Hello, $USER. Today is, "; date; echo -ne "${NC}"
echo -e "${light_blue}"; cal ; echo -ne "${NC}"  
echo 
echo -ne "${light_blue}Sysinfo:"; uptime; echo -e "${NC}"
